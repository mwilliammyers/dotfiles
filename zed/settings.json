    //     "checkOnSave": false,
    //   }
    // }
  },
  "agent": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    }
  },
  // "edit_predictions": {
  //   "mode": "subtle"
  // },
  "terminal": {
    "dock": "right"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
